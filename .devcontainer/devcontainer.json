{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "LucasFA.octaveexecution",
        "ms-python.python",
        "ms-vscode.jupyter",
        "paulosilva.vsc-octave-debugger",
        "redhat.vscode-yaml",
        "toasty-technologies.octave",
        "tusindfryd.octave-formatter"
      ]
    }
  },
  "containerEnv": {
    "SHELL": "/bin/bash"
  },
  "remoteUser": "jovyan",
  "containerUser": "jovyan",
  "mounts": [
    {
      "source": "${localEnv:HOME}/.gitconfig",
      "target": "/home/jovyan/.gitconfig",
      "type": "bind"
    },
    {
      "source": "${localEnv:HOME}/.ssh",
      "target": "/home/jovyan/.ssh",
      "type": "bind"
    }
  ],
  "postCreateCommand": ".devcontainer/postinstall.sh"
}